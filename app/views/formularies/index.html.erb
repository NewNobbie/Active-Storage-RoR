<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, t('formularies.index.title') %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl"><%= t('formularies.index.heading')%></h1>
    <%= link_to t('formularies.index.new_button'), new_formulary_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="formularies" class="min-w-full">
    <% @formularies.each do |formulary| %>
      <%= render formulary %>
      <p>
        <%= link_to t('formularies.index.show_button'), formulary, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
